<%= form_with(model: @category, local: true) do |f| %>
    <% if @category.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Esta categor√≠a no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @category.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="field py-1">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

        <div class="field py-1">
        <%= f.label :visibility %>
        <%= f.select :visibility, @visibilities, include_blank: true %>
    </div>

    <div class="field py-1">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true%>
    </div>

    <div class = 'actions py-3'>
        <%= f.submit class:'btn btn-success' %>
    </div>
<% end %>