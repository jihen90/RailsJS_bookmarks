<%= form_with(model: type, local: true) do |f| %>
    <% if type.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este tipo no se pudo crear por las siguientes razones</h2>
            <ul>
                <% type.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>