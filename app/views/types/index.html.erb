<h1>Types</h1>
<%= render 'form', type: @type %>

<div class= 'py-2'>
    <%= link_to 'Go to Bookmarks', bookmarks_path, class: 'btn btn-primary' %>
    <%= link_to 'Go to Categories', categories_path, class: 'btn btn-dark' %>
</div>

<p id="notice"><%= notice %></p>
<br>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody id="types">
        <% @types.each do |type| %>
            <tr>
            <td><%= type.name %></td>

            <td><%= link_to 'Show', type, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_type_path(type), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', type, method: :delete, class: 'btn btn-danger', data: {confirm: 'Â¿Quieres eliminar el tipo?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>