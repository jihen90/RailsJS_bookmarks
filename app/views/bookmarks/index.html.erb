<h1>Bookmarks</h1>
<%= render 'form', bookmark: @bookmark %>

<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
<thead>
    <tr>
        <th>Name</th>
        <th>URL</th>
        <th>Category</th>
        <th>Type</th>
        <th colspan="3"></th>
    </tr>
</thead>

<tbody>
    <% @bookmarks.each do |bookmark| %>
        <tr id="bookmark"<%=bookmark.id%>">
        <td><%= bookmark.name %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.category.name %></td>
        <td><%= bookmark.type.name %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        </tr>
    <% end %>
</tbody>
</table>
<br>

